<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <script src="https://code.jquery.com/jquery-3.1.1.min.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
        <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>

        {% block stylesheets %}{% endblock %}
        {% block javascripts_header %}{% endblock %}
    </head>
    <body>
        
        <div class="ui left vertical menu sidebar">
            <a href="/pokemon_test" class="item">Pokemon</a>
            <a href="/login" class="item">Login</a>
            <a href="/crud_test" class="item">Crud</a>
        </div>

        <div class="pusher">
            <button id="open_sidebar" class="ui right labeled icon button">
                Open
                <i class="right chevron icon"></i>
            </button>

            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    
    <script>
        let button = window.document.getElementById("open_sidebar");
        button.addEventListener("click", (event) => {
            $('.ui.sidebar').sidebar('toggle');
        });
    </script>
    
    </body>
</html>
